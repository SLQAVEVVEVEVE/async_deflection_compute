# Основной сервис (Rails)
MAIN_SERVICE_BASE_URL=https://localhost:3000
MAIN_SERVICE_ASYNC_RESULT_PATH=/api/beam_deflections/{beam_deflection_id}/async_result

# Псевдо-авторизация callback (Rails проверяет заголовок)
CALLBACK_AUTH_TOKEN=12345678
CALLBACK_AUTH_HEADER=X-Async-Token
CALLBACK_AUTH_SCHEME=

# Таймаут и асинхронность
MAIN_SERVICE_TIMEOUT_SECONDS=10
MAIN_SERVICE_VERIFY_TLS=true
ASYNC_DELAY_MIN_SECONDS=5
ASYNC_DELAY_MAX_SECONDS=10
ASYNC_MAX_WORKERS=5

